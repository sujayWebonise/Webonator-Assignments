#include<stdio.h>
#include<stdlib.h>
int main()
{
char file_name[20];
char ch;
FILE *fp;
printf("enter file name =");
scanf("%c",file_name);
fp=fopen(file_name,"w");
//printf("hello\n");
if(fp==NULL)
{
printf("cannot open file");
exit(0);
}
ch = fgetc(fp);

    while (ch != EOF)

    {

        printf ("%c", ch);

        ch = fgetc(fp);

    }
    fclose(fp);
return(0);
}
